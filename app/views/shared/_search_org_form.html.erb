<div class="row">
<%= form_tag("/search_profile", method: "get") do %>
	<span class="span4">
	  <%= text_field_tag(:name, @name) %>
	</span>
	<span class="span4">
	  <%= submit_tag("Search for profiles", class: 'btn') %>
	  <%= link_to "or create a new profile", create_profile_path, :class => "movedown signup_button round"  %>
	</span>
<% end %>
</div>

