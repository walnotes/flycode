<% provide(:title, 'Create Account') %>
<h1 class="text-left">Create an Account</h1>

  <div class="col-xs-12">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm your password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create an Account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
